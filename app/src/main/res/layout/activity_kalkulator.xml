<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kalkulator"

    android:orientation="vertical"


    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kalkulator"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kalkulator PInter banget"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:fontFamily="sans-serif-black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angka 1 "
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/angka1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Masukan angka"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Angka 2 "
        android:textSize="20dp"
        android:layout_marginStart="20dp"

        />

    <EditText
        android:id="@+id/angka2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Masukan angka"
        android:textStyle="bold"


        tools:ignore="DuplicateIds" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >
        <Button
            android:id="@+id/tambah"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:backgroundTint="#00796B"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/kurang"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:backgroundTint="#D32F2F"
            android:layout_margin="10dp"
            android:textColor="@color/white"


            />
        <Button
            android:id="@+id/persen"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:backgroundTint="#FFA000"
            android:layout_margin="10dp"
            android:textColor="@color/white"


            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"

        >
        <Button
            android:id="@+id/kali"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:backgroundTint="#0288D1"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/bagi"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:backgroundTint="#512DA8"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            />
        <Button
            android:id="@+id/clear"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:backgroundTint="#3C3A38"
            android:layout_margin="10dp"
            android:textColor="@color/white"

            />


    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasil"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="25dp"

        />

    <TextView
        android:id="@+id/hasil"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""


        />
    <TextView
        android:id="@+id/tvhasil"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_marginTop="50dp"

        />



</LinearLayout>