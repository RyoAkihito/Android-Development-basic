<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"

                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/swiss_destination"
                android:scaleType="centerCrop"
                android:layout_marginTop="50dp"

                />
<!--            <ImageButton-->
<!--                android:layout_width="30dp"-->
<!--                android:layout_height="30dp"-->
<!--                android:background="@drawable/baseline_favorite_24"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:layout_below="@id/img"-->
<!--                android:layout_toRightOf="@id/title"-->
<!--                android:layout_marginStart="175dp"/>-->

            <TextView
                android:id="@+id/title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swiss"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="37dp"
                android:layout_below="@id/img"/>

            <TextView
                android:id="@+id/desc"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Penjelasan"
                android:layout_below="@id/title"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <ImageButton
                android:id="@+id/btn1"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_location_on_24"
                android:layout_below="@id/desc"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/tempat"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Switzerland"
                android:layout_toRightOf="@id/btn1"
                android:layout_below="@id/desc"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                />

            <ImageButton
                android:id="@+id/btn2"

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_price_check_24"
                android:layout_below="@id/desc"
                android:layout_toRightOf="@id/tempat"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 / Trip"
                android:layout_toRightOf="@id/btn2"
                android:layout_below="@id/desc"
                android:layout_marginTop="30dp"
                android:textSize="18dp"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Trip Now"
                android:layout_below="@id/tempat"
                android:layout_marginTop="30dp"
                />




        </RelativeLayout>





    </androidx.cardview.widget.CardView>





</RelativeLayout>